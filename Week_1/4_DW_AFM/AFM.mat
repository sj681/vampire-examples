#---------------------------------------------------
# Number of Materials
#---------------------------------------------------
material:num-materials=2
#---------------------------------------------------
# Material 1 Co Generic
# Parameters available from 
# https://doi.org/10.1088%2F0953-8984%2F26%2F10%2F103202
#---------------------------------------------------
material[1]:material-name=AFMS1
material[1]:damping-constant=1
material[1]:exchange-matrix[1]=6.064e-21
material[1]:exchange-matrix[2]=-6.064e-21
material[1]:atomic-spin-moment=1.72 !muB
material[1]:uniaxial-anisotropy-constant=6.69e-23
material[1]:uniaxial-anisotropy-direction = 0,0,1
material[1]:material-element=Co
material[1]:initial-spin-direction=0,0,1
material[1]:domain-wall-second-magnetisation-vector = 0,0,-1

material[2]:material-name=AFMS2
material[2]:damping-constant=1
material[2]:exchange-matrix[2]=6.064e-21
material[2]:exchange-matrix[1]=-6.064e-21
material[2]:atomic-spin-moment=1.72 !muB
material[2]:uniaxial-anisotropy-constant=6.69e-23
material[2]:uniaxial-anisotropy-direction = 0,0,1
material[2]:material-element=Co
material[2]:initial-spin-direction=0,0,-1
material[2]:domain-wall-second-magnetisation-vector = 0,0,1
